rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcıların kendi hesaplama geçmişlerine erişmesine izin ver.
    // Veri yapısı: /calculations/{userId}/items/{itemId}
    match /calculations/{userId}/items/{itemId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
